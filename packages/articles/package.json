{
  "name": "@kimuson.dev/articles",
  "version": "1.0.0",
  "description": "記事管理のパッケージ",
  "type": "module",
  "exports": {
    ".": {
      "@kimuson-dev/src": "./src/index.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "default": "./dist/index.js"
    }
  },
  "bin": {
    "copy-article-assets": "./dist/copy-article-assets.js"
  },
  "files": [
    "dist",
    "summary"
  ],
  "scripts": {
    "build": "pnpm generate && tsup --clean",
    "typecheck": "tsc -p . --noEmit",
    "generate": "rimraf summary/assets && tsx src/scripts/generate-summary/index.ts"
  },
  "devDependencies": {
    "@types/find-package-json": "^1.2.6",
    "@types/fs-extra": "^11.0.4",
    "@types/glob": "^8.1.0",
    "@types/node": "^22.10.5",
    "fs-extra": "^11.2.0",
    "glob": "^11.0.0",
    "gray-matter": "^4.0.3",
    "octokit": "^4.0.3",
    "rimraf": "^6.0.1",
    "rss-parser": "^3.13.0",
    "@kimuson.dev/tsconfig": "workspace:*",
    "tsup": "^8.3.5",
    "tsx": "^4.19.2",
    "valibot": "1.0.0-beta.9"
  },
  "dependencies": {
    "es-toolkit": "^1.31.0",
    "find-package-json": "^1.2.0",
    "image-size": "^1.2.0",
    "open-graph-scraper": "^6.8.3"
  }
}
