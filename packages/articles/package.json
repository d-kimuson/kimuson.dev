{
  "name": "articles",
  "version": "1.0.0",
  "description": "記事管理のパッケージ",
  "type": "module",
  "exports": {
    ".": {
      "kimuson-dev/src": "./src/index.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "pnpm generate && tsup --clean",
