  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/glob": "^8.1.0",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^22.10.5",
    "fs-extra": "^11.2.0",
    "glob": "^11.0.0",
    "gray-matter": "^4.0.3",
    "octokit": "^4.0.3",
    "rimraf": "^6.0.1",
    "rss-parser": "^3.13.0",
    "tsconfig": "workspace:*",
    "tsup": "^8.3.5",
    "tsx": "^4.19.2",
    "valibot": "1.0.0-beta.9"
  },
  "dependencies": {
    "es-toolkit": "^1.31.0",
    "jsdom": "^24.1.1"
  }
