{
  "editor.tabSize": 2,
  "files.associations": {
    "*.tsx": "typescriptreact",
    "*.jsx": "javascriptreact",
  },
  // ESLint
  "eslint.options": {
    "configFile": "./.eslintrc.js"
  },
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "eslint.codeActionsOnSave.mode": "problems",
  "eslint.alwaysShowStatus": true,
  // Stylelint
  "stylelint.enable": true,
  "stylelint.validate": [
    "css",
    "scss",
  ],
  // Lint On Save
  "editor.formatOnSave": false,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true,
    "source.fixAll.stylelint": true,
    "source.fixAll.textlint": true,
  },
  // Invalidate other formatters
  "css.validate": false,
  "scss.validate": false,
  // artcile related
  "textlint.nodePath": "/Users/kaito/Blogs/gatsby-tech-blog/node_modules",
  "textlint.configPath": "/Users/kaito/Blogs/gatsby-tech-blog/.textlintrc",
  "textlint.autoFixOnSave": false
}