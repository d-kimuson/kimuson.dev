{
  "name": "kimuson.dev",
  "type": "module",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro build",
    "typecheck": "tsc --noEmit",
    "lint:eslint": "eslint src --cache --ext .ts,.tsx",
    "lint:prettier": "prettier '**/*.{tsx,ts,mjs,cjs,js,json,css,scss,yml,yaml,md}' --check",
    "lint:cspell": "cspell lint './**/*.{tsx,ts,mjs,cjs,js,json,css,scss,yml,yaml,md}' --gitignore --cache",
    "lint": "pnpm /^lint:.*/",
    "fix:eslint": "pnpm lint:eslint --fix",
    "fix:prettier": "prettier '**/*.{tsx,ts,mjs,cjs,js,json,css,scss,yml,yaml,md}' --write",
    "fix": "pnpm /^fix:.*/",
    "preview": "astro preview",
    "astro": "astro",
    "run:lint-staged": "lint-staged --allow-empty -r",
    "setup:husky": "husky install",
    "postinstall": "pnpm setup:husky",
    "preinstall": "npx only-allow pnpm"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "packageManager": "pnpm@8.6.3",
  "engines": {
    "node": ">=18",
    "npm": "forbidden, use pnpm",
    "yarn": "forbidden, use pnpm",
    "pnpm": ">=8.6.3"
  },
  "overrides": {
    "react": "npm:@preact/compat@latest",
    "react-dom": "npm:@preact/compat@latest"
  },
  "dependencies": {
    "classnames": "^2.3.2",
    "date-fns": "^2.30.0",
    "jsdom": "^22.1.0",
    "preact": "^10.17.1",
    "remark-code-titles": "^0.1.2",
    "remeda": "^1.27.0",
    "rss-parser": "^3.13.0",
    "tailwindcss": "^3.3.3",
    "ts-array-length": "^0.1.2",
    "ts-pattern": "^4.3.0",
    "zod": "^3.22.2"
  },
  "devDependencies": {
    "@astrojs/preact": "^3.0.0",
    "@astrojs/rss": "^3.0.0",
    "@astrojs/tailwind": "^5.0.0",
    "@types/jsdom": "^21.1.3",
    "@types/validator": "^13.11.1",
    "@typescript-eslint/eslint-plugin": "^6.7.2",
    "@typescript-eslint/parser": "^5.62.0",
    "astro": "^3.1.2",
    "commitizen": "^4.3.0",
    "cspell": "^7.3.6",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-tailwindcss": "^3.13.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.3.0",
    "prettier": "^2.8.8",
    "prettier-plugin-astro": "^0.12.0",
    "sass": "^1.68.0",
    "type-fest": "^4.3.1",
    "typescript": "^5.2.2",
    "validator": "^13.11.0"
  }
}
