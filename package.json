{
  "name": "kimuson.dev",
  "version": "1.0.0",
  "description": "",
  "private": true,
  "type": "module",
  "config": {
    "commitizen": {
      "path": "./custom-cz-rule.cjs"
    }
  },
  "scripts": {
    "dev": "turbo run dev",
    "lint": "pnpm /^lint:.*/",
    "lint:prettier": "prettier '**/*.{tsx,ts,mjs,cjs,js,json,css,scss,yml,yaml,md}' --check",
    "lint:cspell": "cspell lint './**/*.{tsx,ts,mjs,cjs,js,json,css,scss,yml,yaml,md}' --gitignore --cache",
    "lint:turbo": "turbo run lint",
    "fix": "pnpm /^fix:.*/",
    "fix:prettier": "prettier '**/*.{tsx,ts,mjs,cjs,js,json,css,scss,yml,yaml,md}' --write",
    "fix:turbo": "turbo run fix",
    "typecheck": "turbo run typecheck",
    "build": "turbo run build",
    "test": "turbo run test",
    "preinstall": "npx only-allow pnpm",
    "postinstall": "lefthook install"
  },
  "packageManager": "pnpm@9.7.1",
  "engines": {
    "node": ">=18",
    "npm": "forbidden, use pnpm",
    "yarn": "forbidden, use pnpm",
    "pnpm": ">=9.7.1"
  },
  "devDependencies": {
    "commitizen": "^4.3.0",
    "cspell": "^8.14.1",
    "cz-conventional-changelog": "^3.3.0",
    "lefthook": "^1.7.14",
    "prettier": "^3.3.3",
    "prettier-plugin-astro": "^0.12.3",
    "turbo": "^2.3.3"
  },
  "license": "UNLICENSED"
}
