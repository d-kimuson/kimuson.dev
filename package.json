{
  "name": "kimuson.dev",
  "type": "module",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro build",
    "watch:typecheck": "pnpm /^watch:typecheck:.*/",
    "watch:typecheck:tsc": "pnpm typecheck:tsc --watch",
    "watch:typecheck:astro": "pnpm typecheck:astro --watch",
    "typecheck": "pnpm /^typecheck:.*/",
    "typecheck:tsc": "tsc --noEmit",
    "typecheck:astro": "astro check",
    "lint:eslint": "eslint src --cache --ext .ts,.tsx",
    "lint:prettier": "prettier '**/*.{tsx,ts,mjs,cjs,js,json,css,scss,yml,yaml,md}' --check",
    "lint:cspell": "cspell lint './**/*.{tsx,ts,mjs,cjs,js,json,css,scss,yml,yaml,md}' --gitignore --cache",
    "lint": "pnpm /^lint:.*/",
    "fix:eslint": "pnpm lint:eslint --fix",
    "fix:prettier": "prettier '**/*.{tsx,ts,mjs,cjs,js,json,css,scss,yml,yaml,md}' --write",
    "fix": "pnpm /^fix:.*/",
    "preview": "astro preview",
    "astro": "astro",
    "preinstall": "npx only-allow pnpm"
  },
  "config": {
    "commitizen": {
      "path": "./custom-cz-rule.cjs"
    }
  },
  "packageManager": "pnpm@9.7.1",
  "engines": {
    "node": ">=18",
    "npm": "forbidden, use pnpm",
    "yarn": "forbidden, use pnpm",
    "pnpm": ">=9.7.1"
  },
  "overrides": {
    "react": "npm:@preact/compat@latest",
    "react-dom": "npm:@preact/compat@latest"
  },
  "dependencies": {
    "classnames": "^2.5.1",
    "date-fns": "^3.6.0",
    "preact": "^10.23.2",
    "remark-code-titles": "^0.1.2",
    "rss-parser": "^3.13.0",
    "tailwindcss": "^3.4.10",
    "ts-array-length": "^0.1.3",
    "ts-pattern": "^5.3.1",
    "valibot": "^0.25.0"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.0",
    "@astrojs/mdx": "^3.1.3",
    "@astrojs/preact": "^3.5.1",
    "@astrojs/rss": "^4.0.7",
    "@astrojs/tailwind": "^5.1.0",
    "@astrojs/ts-plugin": "^1.10.0",
    "@types/jsdom": "^21.1.7",
    "@types/validator": "^13.12.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "astro": "^4.14.2",
    "commitizen": "^4.3.0",
    "cspell": "^8.14.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-tailwindcss": "^3.17.4",
    "jsdom": "^24.1.1",
    "lefthook": "^1.7.14",
    "prettier": "^3.3.3",
    "prettier-plugin-astro": "^0.12.3",
    "remeda": "^2.11.0",
    "sass": "^1.77.8",
    "sharp": "^0.33.5",
    "type-fest": "^4.25.0",
    "typescript": "^5.5.4",
    "validator": "^13.12.0"
  }
}
