{
  "extends": "astro/tsconfigs/strictest",
  "compilerOptions": {
    "target": "esnext",
    "lib": ["ES2022"],
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "~/*": ["src/*"]
    },
    "exactOptionalPropertyTypes": false,
    "verbatimModuleSyntax": true,
    "plugins": [
      {
        "name": "@astrojs/ts-plugin"
      }
    ]
  },
  "include": ["src"],
  "exclude": ["test/**", "**/*.test.ts"]
}
