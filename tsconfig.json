{
  "extends": "@tsconfig/node14/tsconfig.json",
  "compilerOptions": {
    "esModuleInterop": true,
    "jsx": "preserve",
    "lib": [
      "dom",
      "esnext"
    ],
    "rootDir": "./",
    "baseUrl": "./",
    "paths": {
      "@declaration": [
        "types/declaration.d.ts"
      ],
      "@graphql-types": [
        "types/graphql-types.d.ts"
      ],
      "@styles/*": [
        "src/global-styles/*"
      ],
      "@funcs/*": [
        "./src/helper-functions/*"
      ],
      "@components/*": [
        "./src/components/*"
      ],
    },
    "module": "esnext",
    "moduleResolution": "node",
    "target": "esnext",
    "allowJs": true,
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "resolveJsonModule": true,
  },
  "files": [
    "./@types/globals.d.ts",
    "./@types/vendor.d.ts",
  ],
  "exclude": [
    "node_modules"
  ],
  "include": [
    "./gatsby-node.ts",
    "./gatsby-config.ts",
    "./gatsby-browser.ts",
    "./src/**/*",
    "./gatsby/**/*"
  ]
}